{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/typeorm/(.*)": "<rootDir>/../libs/typeorm/src/$1",
    "@app/typeorm": "<rootDir>/../libs/typeorm/src",
    "@app/payment/(.*)": "<rootDir>/../libs/payment/src/$1",
    "@app/payment": "<rootDir>/../libs/payment/src",
    "@app/upload-file/(.*)": "<rootDir>/../libs/upload-file/src/$1",
    "@app/upload-file": "<rootDir>/../libs/upload-file/src"
  }
}